<UserControl x:Class="ChinookWPFApp.NavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChinookWPFApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="#f3c4fb">

    <StackPanel Orientation="Vertical" Background="Pink">
        <!-- Menu -->
        <Menu>
            <MenuItem Header="File" Background="#f3c4fb">
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="Page" Background="#f3c4fb">
                <MenuItem Header="Home" Command="{Binding HomeCommand}" />
                <MenuItem Header="Artists" Command="{Binding ArtistsCommand}" />
                <MenuItem Header="Albums" Command="{Binding AlbumsCommand}" />
                <MenuItem Header="Tracks" Command="{Binding TracksCommand}" />
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
